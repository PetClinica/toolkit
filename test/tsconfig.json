{
  "compilerOptions": {
    "composite": true,
    "rootDir": "./src",
    "target": "es2022",
    "lib": ["ES2023"],
    "module": "Node16",
    "allowJs": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "declaration": true
  },
  "exclude": ["node_modules"],
  "include": ["src"],
  "references": [
    { "path": "../logger" },
  ]
}
